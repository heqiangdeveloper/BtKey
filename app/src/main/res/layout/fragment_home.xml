<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/authen_bg"
    android:orientation="vertical"
    tools:context="com.chinatsp.btkey.MainActivity">
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/exit_bt"
            android:layout_x="30px"
            android:layout_y="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"/>
        <ImageView
            android:id="@+id/user_logo_iv"
            android:layout_x="709px"
            android:layout_y="20px"
            android:layout_width="154px"
            android:layout_height="154px"
            android:src="@mipmap/user_logo"/>
        <LinearLayout
            android:layout_x="909px"
            android:layout_y="52px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#ffffff"
                android:textSize="48px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14px"
                android:layout_width="83px"
                android:layout_height="38px"
                android:src="@mipmap/vip_user"/>
        </LinearLayout>
        <TextView
            android:layout_x="909px"
            android:layout_y="112px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#bbbbbb"
            android:textSize="38px"
            android:text="ID: 1 8 8 1 2 3 4 5 6 7 8"/>

        <LinearLayout
            android:layout_x="160px"
            android:layout_y="204px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/content_bg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="33px"
                    android:layout_width="58px"
                    android:layout_height="58px"
                    android:src="@mipmap/car"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/message"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1600px"
                android:layout_height="310px"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/close_iv"
                        android:layout_marginTop="46px"
                        android:layout_width="154px"
                        android:layout_height="154px"
                        android:src="@mipmap/close"/>
                    <TextView
                        android:layout_marginTop="26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="42px"
                        android:textColor="#bbbbbb"
                        android:text="锁闭"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/open_iv"
                        android:layout_marginTop="46px"
                        android:layout_width="154px"
                        android:layout_height="154px"
                        android:src="@mipmap/open"/>
                    <TextView
                        android:layout_marginTop="26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="42px"
                        android:textColor="#bbbbbb"
                        android:text="解锁"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/alarm_iv"
                        android:layout_marginTop="46px"
                        android:layout_width="154px"
                        android:layout_height="154px"
                        android:src="@mipmap/alarm"/>
                    <TextView
                        android:layout_marginTop="26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="42px"
                        android:textColor="#bbbbbb"
                        android:text="鸣笛"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/light_iv"
                        android:layout_marginTop="46px"
                        android:layout_width="154px"
                        android:layout_height="154px"
                        android:src="@mipmap/light"/>
                    <TextView
                        android:layout_marginTop="26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="42px"
                        android:textColor="#bbbbbb"
                        android:text="大灯"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </AbsoluteLayout>

</LinearLayout>
